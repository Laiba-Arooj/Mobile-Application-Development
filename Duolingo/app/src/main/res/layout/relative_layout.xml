<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black"
    tools:context=".RelativeLayout">

    <ImageView
        android:layout_width="254dp"
        android:layout_height="254dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="80dp"
        android:src="@drawable/spread">

    </ImageView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="403dp"
        android:src="@drawable/duolingotrade"
        android:tint="@color/LimeGreen"
        tools:ignore="UseAppTint">

    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="310dp"
        android:text="@string/duolingotext"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <Button
        android:id="@+id/signup"
        android:layout_width="360dp"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="135dp"
        android:backgroundTint="@color/BrightDuoligo"
        android:text="@string/get_started"
        android:textColor="@color/Black"
        android:textSize="20sp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/alreadacc"
        android:layout_width="360dp"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#4A3F3F"
        android:text="@string/already"
        android:textColor="@color/BrightDuoligo"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

</RelativeLayout>